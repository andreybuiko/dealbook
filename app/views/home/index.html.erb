<%= simple_form_for :search, :url => url_for(:action => 'create', :controller => 'searches'),
      :method => 'post', :html => { :class => 'form-search' } do |f| %>
  <%= f.input_field :keywords, :label => false, :autofocus => true,
      :class => "search-query" %>
  <%= f.submit "Search", :class => 'btn' %>
<% end %>


