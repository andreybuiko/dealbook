<%= simple_form_for @investor do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :website %>
  <%= f.input :linkedin %>
  <%= f.input :category, :collection => Investor::CATEGORIES, :selected => :first %>    
  <%= f.input :status, :collection => Investor::STATUSES, :selected => :first %>
  <%= f.input :stage, :label => 'Stages', :collection => Investor::STAGES, :input_html => {multiple: true, 
    :class => "chzn-select", "data-placeholder" => "Select one or more stages"} %>
  <%= f.association :markets, :input_html => {:class => "chzn-select", "data-placeholder" => "Select one or more markets"} %>     
  <%= f.association :locations, :placeholder => "Select one or more locations", :label_method => :full,
    :input_html => {:class => "chzn-select", "data-placeholder" => "Select one or more cities"} %> 
  <br>   
  <%= f.button :submit %>  
<% end %>