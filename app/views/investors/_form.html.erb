<%= form_for(@investor) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </div>
  <div class="field">
    <%= f.label :linkedin %><br />
    <%= f.text_field :linkedin %>
  </div>
    <div class="field">
    <%= f.label :category %><br />
    <%= f.select(:category, options_for_select(Investor::CATEGORIES) ) %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select(:status, options_for_select(Investor::STATUSES) ) %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit' %>
  </div>
<% end %>

