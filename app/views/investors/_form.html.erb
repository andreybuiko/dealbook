<%= form_for(@investor) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </div>
  <div class="field">
    <%= f.label :linkedin %><br />
    <%= f.text_field :linkedin %>
  </div>
    <div class="field">
    <%= f.label :category %><br />
    <%= f.select(:category, options_for_select(Investor::CATEGORIES) ) %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select(:status, options_for_select(Investor::STATUSES) ) %>
  </div>
  <div class="field">
    <%= f.label :stage, 'Stages (check all that apply)' %><br />    
    <%= f.fields_for :stage do |s| %>
      <% Investor::STAGES.each_with_index do |stage, index| %>
        <%= check_box_tag 'investor[stage][]', stage, 
          (@investor.stage.include?(stage) unless @investor.stage.nil?), 
          {:id => "stages_#{index+1}"} %>
        <%= label_tag 'investor[stage][]', stage %><br>
      <% end %>
    <% end %> 
  </div>
  <div class="field">
    <%= f.label :market_ids, 'Markets' %><br />
    <%= f.collection_select :market_ids, Market.order(:name), :id, :name, {}, 
      {multiple: true, :class => "chzn-select", "data-placeholder" => "Select one or more markets"} %>
  </div>  
  <div class="field">
    <%= f.label :location_ids, 'Locations' %><br />
    <%= f.collection_select :location_ids, Location.order(:city), :id, :full, {}, 
      {multiple: true, :class => "chzn-select", "data-placeholder" => "Select one or more cities"} %>
  </div>  
  
  <div class="actions">
    <%= f.submit 'Submit' %>
  </div>
<% end %>

