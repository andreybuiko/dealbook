<div class="title">
  <h3>Investors</h3>
</div>

<% if @investors.empty? %>
  <p>No investors yet.</p><br>
<% else %>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @investors.each do |investor| %>
      <tr>
        <td><%= link_to( investor.name, investor) if can? :show, Investor %></td>
        <td><%= link_to edit_investor_path(investor), :id => "edit_#{investor.id}" do  %>
              <i class="icon-pencil"></i>
            <% end if can? :edit, Investor %>
        </td>
        <td><%= link_to(investor, confirm: 'Are you sure?', method: :delete,
                        :id => "destroy_#{investor.id}") do %>
              <i class="icon-remove"></i>
            <% end if can? :destroy, Investor %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>

<%= will_paginate @investors, :renderer => BootstrapPagination::Rails %>

<% if can? :create, Investor %>
  <%= button_to 'New Investor', new_investor_path, :method => :get, :class => "btn btn-primary" %>
<% end %>
