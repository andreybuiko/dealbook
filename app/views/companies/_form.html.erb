<%= simple_form_for @company do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :website %>
  <%= f.input :linkedin %>  
  <%= f.input :status, :collection => Company::STATUSES, :selected => :first %>
  <%= f.association :markets, :input_html => {:class => "chzn-select", 
    "data-placeholder" => "Select one or more markets"} %>     
  <%= f.association :locations, :label_method => :full,
    :input_html => {:class => "chzn-select", "data-placeholder" => "Select one or more cities"} %> 
  <br>   
  <%= f.button :submit %>  
<% end %>



