<h3>Locations#index</h3>
<br>

<% if @locations.empty? %>
  No locations yet.<br>
<% else %>
  <table class="table table-bordered table-condensed">
    <thead>
      <tr>
        <th>Country</th>
        <th>Region</th>
        <th>City</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.country %></td>
        <td><%= location.region %></td>
        <td><%= location.city %></td>
        <td><%= link_to('Edit', edit_location_path(location)) if can? :edit, Location %></td>
        <td><%= link_to('Destroy', location, confirm: 'Are you sure?', method: :delete) if can? :destroy, Location %></td>
      </tr>
    <% end %>
  </table>
<% end %>

<%= will_paginate @locations, :renderer => BootstrapPagination::Rails %>

<% if can? :create, Company %>
  <%= button_to 'New Location', new_location_path, :method => :get, :class => "btn btn-primary" %>
<% end %>