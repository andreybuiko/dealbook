<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
  </div>
  <div class="field">
    <%= f.label :roles %><br />
  </div>
  <div class="actions">
    <%= f.submit 'Submit' %>
  </div>

<% end %>