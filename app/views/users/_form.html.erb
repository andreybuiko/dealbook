<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name, :disabled => true %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, :disabled => true %>
  </div>
  <div class="field">
    <%= f.label :role %><br />
    <%= f.collection_select :role, User::ROLES-['admin', 'guest'], :to_s, :humanize %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit' %>
  </div>

<% end %>